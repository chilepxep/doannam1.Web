@model BanSach.Models.User

@{
    ViewBag.Title = "FormLogin";
    Layout = "~/Views/Shared/DangNhap.cshtml";
}

<div style="padding-top:30px; padding-bottom:30px;">
    @using (Html.BeginForm("Authen", "LoginForm", FormMethod.Post))
    {
        <div style="box-shadow: 0 0 10px rgba(0,0,0,0.2); width:250px; height:250px" class="container">
            <form action="/action_page.php">
                <div class="form-group">
                    <label style="padding-bottom: 10px;padding-top:10px" for="email">Email:</label> <br />
                     @Html.TextBoxFor(m => m.Email)
                </div>
                <div class="form-group">
                    <label  style="padding-bottom:10px;padding-top:10px" for="pwd">Password:</label> <br />
                    @Html.PasswordFor(m => m.Password)
                </div>
                <div style="padding-top:30px; padding-bottom:10px">
                    <button style="border:solid; border-width:1px" type="submit" name="btnLogin" class="btn btn-default">Đăng Nhập</button>
                </div>
            </form>
        </div>
    }
</div>

