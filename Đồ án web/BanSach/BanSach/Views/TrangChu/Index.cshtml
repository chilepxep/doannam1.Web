@model IEnumerable<BanSach.Models.Product>

@{
    ViewBag.Title = "BanSach";
    Layout = "~/Views/Shared/TrangChu_LayoutPage.cshtml";
}
<link href="~/Content/TrangChu_style.css" rel="stylesheet" />
<div id="SanPham">
    <div id="MucSanPham">
        <h2 id="SanPham">Sản Phẩm</h2>
    </div>
    <div class="container">
        <div class="row">

            @foreach (var sp in Model)
            {
                <div margin-top:10px; margin-bottom:10px;" class="col-sm-6 col-md-4 col-lg-3">
                    <div style="box-shadow: 0 0 10px rgba(0,0,0,0.2);" class="box_sp">
                        <img style="margin-top:10px" class="SpIMG" src="@Url.Content(sp.Thumbnail)" height="150" width="150" />
                        <p class="SpTitle">@Html.DisplayFor(m => sp.Title)</p>
                        <p class="SpDiscount">Giá giảm: @Html.DisplayFor(m => sp.Discount) VND</p>
                        <p style="text-decoration: line-through" class="SpPrice">@Html.DisplayFor(m => sp.Price) VND</p>
                        <p class="SpDecription">Tác Giả: @Html.DisplayFor(m => sp.Description)</p>
                        <p class="SpInventory">Số lượng: @Html.DisplayFor(m => sp.Inventory) Quyển</p>
                        <a href="/ShoppingCart/AddtoCart/@sp.ID">
                            <p><input style="margin-bottom:10px" type="submit" value="Thêm vào giỏ hàng" /></p>
                        </a>
                        <p style="padding-bottom:15px">
                            @Html.ActionLink("Xem sản phẩm", "Details", new { id = sp.ID })
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


